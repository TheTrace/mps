= form_for(@contact, :html => { :class => "form-horizontal", :role => "form" } ) do |f|
	= if @contact.errors.any?
		#error_explanation
			%h2
				= pluralize(@contact.errors.count, "error")
				prohibited this contact from being saved:

			%ul
				- @contact.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.label :title, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :title, :class => "form-control autofocus"

	.form-group
		= f.label :first_name, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :first_name, :class => "form-control"

	.form-group
		= f.label :last_name, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :last_name, :class => "form-control"

	.form-group
		= f.label :company, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :company, :class => "form-control"

	.form-group
		= f.label :phone, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :phone, :class => "form-control"

	.form-group
		= f.label :email, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :email, :class => "form-control"

	.form-group
		= f.label :address, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_area :address, :class => "form-control", :rows => "5"

	.form-group
		= f.label :post_code, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :post_code, :class => "form-control"

	.form-group
		= f.label :text, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_area :text, :class => "form-control", :rows => "5"

	.form-group
		.col-sm-offset-2.col-sm-10
			.checkbox
				%label
					= f.check_box :client
					Client 

	.form-group
		.col-sm-offset-2.col-sm-10
			.checkbox
				%label
					= f.check_box :mediator
					Mediator 

	.form-group
		.col-sm-offset-2.col-sm-10
			.checkbox
				%label
					= f.check_box :solicitor
					Solicitor 

	.actions
		.col-sm-offset-2
			= f.submit class: "btn btn-primary"

	:javascript
		$('[autofocus]:first').focus();
