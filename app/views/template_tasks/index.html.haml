.pull-right
	= link_to 'New Task Template', new_template_task_path, :class => "btn btn-default" if is_admin?

%h1 Task Templates

%table.table
	%thead
		%tr
			%th
			%th Title
			%th Text
			%th Days til Due
			%th
			%th
			%th

	%tbody
		- @template_tasks.each do |template_task|
			%tr{ :class => "#{'financial' if template_task.is_financial}" }
				%td= template_task.sort_order
				%td= template_task.title
				%td= template_task.text
				%td= template_task.due_days
				%td
					= link_to "<button type='button' class='btn btn-default btn-xs'><span class='glyphicon glyphicon-eye-open'></span></button>".html_safe, template_task, html = {:title => "Show"}
					= link_to "<button type='button' class='btn btn-default btn-xs'><span class='glyphicon glyphicon-pencil'></span></button>".html_safe, edit_template_task_path(template_task), html = {:title => "Edit"}
				%td.text-right= link_to "<button type='button' class='btn btn-default btn-xs'><span class='glyphicon glyphicon-trash'></span></button>".html_safe, template_task, method: :delete, data: { confirm: 'Are you sure you want to delete this task template?' }, :title => "Destroy"

-#= link_to 'New Task Template', new_template_task_path
