= form_for(@job, :html => { :class => "form-horizontal", :role => "form" } ) do |f|
	- if @job.errors.any?
		%div#error_explanation
			%h2
				= pluralize(@job.errors.count, "error")
				prohibited this job from being saved:

			%ul
				- @job.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.label :reference, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :reference, :class => "form-control"

	.form-group
		= f.label :title, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :title, :class => "form-control autofocus"

	.form-group
		= f.label :description, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_area :text, :class => "form-control", :rows => "5"

	.form-group
		= f.label "Party A", :class => "control-label col-sm-2"
		.col-sm-5
			= f.select :party_a_id, options_for_select([["Please select...",""]]+Contact.for_select, @job.party_a_id), {}, :class => "form-control"

	.form-group
		= f.label "Party B", :class => "control-label col-sm-2"
		.col-sm-5
			= f.select :party_b_id, options_for_select([["Please select...",""]]+Contact.for_select, @job.party_b_id), {}, :class => "form-control"

	.form-group
		= f.label :legal_rep, :class => "control-label col-sm-2"
		.col-sm-5
			= f.select :legal_rep, options_for_select([["Please select...",""]]+Contact.for_select, @job.legal_rep), {}, :class => "form-control"

	.form-group
		= f.label :mediator, :class => "control-label col-sm-2"
		.col-sm-5
			= f.select :mediator, options_for_select([["Please select...",""]]+Contact.for_select, @job.mediator), {}, :class => "form-control"

	.div{ :style => "border: 1px solid gray;" }
		%h2{ :style => "font-weight:strong;" } Possible Reps
		.form-group
			= f.label :legal_rep1, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :legal_rep1, options_for_select([["Please select...",""]]+Contact.for_select, @job.legal_rep1), {}, :class => "form-control"

		.form-group
			= f.label :mediator1, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :mediator1, options_for_select([["Please select...",""]]+Contact.for_select, @job.mediator1), {}, :class => "form-control"

		.form-group
			= f.label :legal_rep2, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :legal_rep2, options_for_select([["Please select...",""]]+Contact.for_select, @job.legal_rep2), {}, :class => "form-control"

		.form-group
			= f.label :mediator2, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :mediator2, options_for_select([["Please select...",""]]+Contact.for_select, @job.mediator2), {}, :class => "form-control"

		.form-group
			= f.label :legal_rep3, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :legal_rep3, options_for_select([["Please select...",""]]+Contact.for_select, @job.legal_rep3), {}, :class => "form-control"

		.form-group
			= f.label :mediator3, :class => "control-label col-sm-2"
			.col-sm-5
				= f.select :mediator3, options_for_select([["Please select...",""]]+Contact.for_select, @job.mediator3), {}, :class => "form-control"




	.form-group
		= f.label :fees_paid, :class => "control-label col-sm-2"
		.col-sm-5
			.input-group
				%span.input-group-addon &pound;
				= f.text_field :fees_paid, :class => "form-control"

	.form-group
		= f.label :mediation_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :mediation_date, :class => "form-control"

	.actions
		.col-sm-offset-2
			= f.submit class: "btn btn-primary"

	:javascript
		$('[autofocus]:first').focus();