= form_for(@job, :html => { :class => "form-horizontal", :role => "form" } ) do |f|
	- if @job.errors.any?
		%div#error_explanation
			%h2
				= pluralize(@job.errors.count, "error")
				prohibited this job from being saved:

			%ul
				- @job.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.label :title, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :title, :class => "form-control autofocus"

	.form-group
		= f.label :text, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_area :text, :class => "form-control", :rows => "5"

	.form-group
		= f.label :reference, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :reference, :class => "form-control"

	.form-group
		= f.label :party_a, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :party_a_id, :class => "form-control"

	.form-group
		= f.label :party_b, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :party_b_id, :class => "form-control"

	.form-group
		= f.label :legal_rep, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :legal_rep, :class => "form-control"

	.form-group
		= f.label :mediator, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :mediator, :class => "form-control"

	.form-group
		= f.label :fees_paid, :class => "control-label col-sm-2"
		.col-sm-5
			.input-group
				%span.input-group-addon &pound;
				= f.text_field :fees_paid, :class => "form-control"

	.form-group
		= f.label :mediation_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :mediation_date, :class => "form-control"

	.actions
		.col-sm-offset-2
			= f.submit class: "btn btn-primary"

	:javascript
		$('[autofocus]:first').focus();